# SAP MCP Server for Bedrock AgentCore
# Provides SAP OData API access as an MCP (Model Context Protocol) server
# This server is deployed alongside the agent to handle inventory queries

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies (including build tools for polyleven)
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy SAP integration code
COPY utils/test_sap_api.py .
COPY utils/sap_mcp_server.py .
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Environment variables for SAP connection (will be set at runtime)
ENV SAP_HOST=""
ENV SAP_USER=""
ENV SAP_PASSWORD=""
ENV SAP_CLIENT=""
ENV PORT=8000
ENV PYTHONUNBUFFERED=1

# Expose port for MCP server
EXPOSE 8000

# Health check - verify SAP credentials are set
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import os; exit(0 if all([os.getenv('SAP_HOST'), os.getenv('SAP_USER'), os.getenv('SAP_PASSWORD')]) else 1)" || exit 1

# Run SAP MCP server
CMD ["python", "sap_mcp_server.py"]
